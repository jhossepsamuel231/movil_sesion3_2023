<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->

    <style name="FragmentStyle">
        <!-- Fondo del fragmento -->
        <item name="android:background">@android:color/white</item>

        <!-- Margen interior para separar los elementos del fragmento -->
        <item name="android:padding">@dimen/fragment_padding</item>
    </style>

    <style name="TableStyle">
        <!-- Margen interior para la tabla -->
        <item name="android:layout_margin">@dimen/table_margin</item>
    </style>

    <style name="TableTitleStyle">
        <!-- Estilo del título "Alumnos" -->
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddButtonStyle">
        <!-- Estilo del botón "add" -->
        <item name="android:textSize">18sp</item>
    </style>

</resources>